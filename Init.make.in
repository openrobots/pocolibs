prefix=         @prefix@
exec_prefix=    @exec_prefix@
abs_srcdir=     @abs_srcdir@

host_cpu=	@host_cpu@

BINDIR=         @bindir@
LIBDIR=         @libdir@
DATADIR=        @datadir@
INCLUDEDIR=     @includedir@
MODULESDIR=     @libdir@

CC=             @CC@
PURIFY=         @PURIFY@
MKDEP=          @MKDEP@

LIBTOOL=	@LIBTOOL@
LTCC=           $(LIBTOOL) --mode=compile $(CC)
LTLD=           $(LIBTOOL) --mode=link $(CC)

CPPFLAGS=	-I@abs_srcdir@/include
CPPFLAGS+=	-I@abs_srcdir@/include/os/$(OSAPI) @CPPFLAGS@
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@

HAS_X=		@HAS_X@
XCPPFLAGS=	@XCPPFLAGS@
XLDFLAGS=	@XLDFLAGS@

OSAPI=		@OSAPI@
RTAI_INCLUDES=	@RTAI_INCLUDES@
LNXKERN_INCLUDES=@LNXKERN_INCLUDES@

# Base directory of the software
ROOTROBOTS ?= 	@prefix@

PORTLIB=	-lportLib
COMLIB=		-lcomLib
POSTERLIB=	-lposterLib
ERRORLIB=	-lerrorLib

LIB_H2_UNIX=	$(COMLIB) $(POSTERLIB) $(ERRORLIB)

OS_LIBS=	@LIBS@
LIBS=		$(LIB_H2_UNIX) $(OS_LIBS) 

MKINSTALLDIRS=	$(abs_srcdir)/mkinstalldirs

RPCGEN=		@RPCGEN@ @RPCGEN_C@

LN=		ln -s
