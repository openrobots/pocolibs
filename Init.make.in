prefix=         @prefix@
exec_prefix=    @exec_prefix@
abs_top_builddir=	@abs_top_builddir@

host_cpu=	@host_cpu@

BINDIR=         @bindir@
LIBDIR=         @libdir@
DATADIR=        @datadir@
INCLUDEDIR=     @includedir@

CC=             @CC@
PURIFY=         @PURIFY@
MKDEP=          @MKDEP@

LIBTOOL=	@LIBTOOL@
LTCC=           $(LIBTOOL) --mode=compile $(CC)
LTLD=           $(LIBTOOL) --mode=link $(CC)

CPPFLAGS=	-I$(top_srcdir)/include -I$(top_builddir)/src
CPPFLAGS+=	-I$(top_srcdir)/include/os/$(OSAPI) @CPPFLAGS@
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@

XENO_CONFIG=	@XENO_CONFIG@

OSAPI=		@OSAPI@

# Base directory of the software
ROOTROBOTS ?= 	@prefix@

PORTLIB=	$(abs_top_builddir)/src/portLib/libportLib.la
COMLIB=		$(abs_top_builddir)/src/comLib/libcomLib.la
POSTERLIB=	$(abs_top_builddir)/src/posterLib/libposterLib.la
ERRORLIB=	$(abs_top_builddir)/src/errorLib/liberrorLib.la

VALGRIND_CFLAGS= @VALGRIND_CFLAGS@
VALGRIND_LIBS=   @VALGRIND_LIBS@

OS_LIBS=	@LIBS@
LIBS=		$(COMLIB) $(POSTERLIB) $(ERRORLIB) $(OS_LIBS)

MKINSTALLDIRS=	$(top_srcdir)/mkinstalldirs

RPCGEN=		@RPCGEN@ @RPCGEN_C@

LN=		ln -s
TAR=		@TAR@
