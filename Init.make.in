prefix=         @prefix@
exec_prefix=    @exec_prefix@
abs_srcdir=     @abs_srcdir@

BINDIR=         @bindir@
LIBDIR=         @libdir@
DATADIR=        @datadir@
INCLUDEDIR=     @includedir@/gdhe
MODULESDIR=     @libdir@/gdhe

CC=             @CC@
PURIFY=         @PURIFY@
MKDEP=          @MKDEP@

LIBTOOL=	@LIBTOOL@

CPPFLAGS=	-I@abs_srcdir@/include @ENDIAN_DEFINES@
CFLAGS=

# Base directory of the software
ROOTROBOTS ?= 	@prefix@

PORTLIB=	-lportLib
COMLIB=		-lcomLib
POSTERLIB=	-lposterLib
ERRORLIB=	-lerrorLib


LIB_H2_UNIX=	-L$(LIBDIR) $(LDRUNFLAGS) $(COMLIB) $(POSTERLIB) $(ERRORLIB)

LIBS=		$(LIB_H2_UNIX) $(OS_LIBS) 

MKINSTALLDIRS=	$(abs_srcdir)/mkinstalldirs

LIBDL=		-ldl
LIBM=		-lm
LIBNET=		-lsocket -lnsl
LIBPOSIX=	-lposix4
LIBPTHREADS=	-lpthread
OS_LIBS=	$(PORTLIB) $(LIBNET) $(LIBPOSIX) $(LIBPTHREADS) \
                  $(LIBDL) $(LIBM)
RPCGEN=		rpcgen

LN=		ln -s

