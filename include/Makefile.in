top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
includedir=	@includedir@
INSTALL=	@INSTALL@
INSTALL_DATA=	$(INSTALL) -m 644

include $(top_builddir)/Init.make

# -----------------------------------------------------------------------

flist=\
	commonStructLib.h	\
	csLib.h			\
	errnoLib.h		\
	gcomLib.h		\
	h2devLib.h		\
	h2endianness.h		\
	h2errorLib.h		\
	h2evnLib.h		\
	h2initGlob.h		\
	h2mathLib.h		\
	h2rngLib.h		\
	h2semLib.h		\
	h2timeLib.h		\
	h2timerLib.h		\
	logLib.h		\
	mboxLib.h		\
	memLib.h		\
	portLib.h		\
	posterLib.h		\
	semLib.h		\
	shellLib.h		\
	smMemLib.h		\
	smObjLib.h		\
	symLib.h		\
	sysLib.h		\
	taskHookLib.h		\
	taskLib.h		\
	tickLib.h		\
	tw_sem.h		\
	wdLib.h

# -----------------------------------------------------------------------

all clean depend:

install:
	$(MKINSTALLDIRS) ${DESTDIR}$(INCLUDEDIR)
	@for f in $(flist); do						\
	  c="$(INSTALL_DATA) $(srcdir)/$$f ${DESTDIR}$(INCLUDEDIR)/$$f";\
	  echo $$c; $$c;						\
	done

distclean:
	rm -f Makefile

.PHONY: all install clean distclean depend
