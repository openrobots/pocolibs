include Init.make

mkinstalldirs = $(SHELL) $(srcdir)/mkinstalldirs

DISTNAME= @PACKAGE@-@VERSION@

SUBDIRS=\
	include \
	src/portLib  \
	src/errorLib \
	src/comLib \
	src/posterLib \
	src/posterLib/posterServ \
	src/h2 \
	src/shell

ifeq (yes,$(HAS_X))
SUBDIRS+= src/xes
endif

all:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d all || exit 2; \
	done

depend:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d depend ; \
	done

install:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d install ;\
	done

clean:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d clean ; \
	done

distclean:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d distclean ; \
	done

DIST_COMMON = BUGS CHANGELOG Init.make.in Makefile.in README aclocal.m4 \
	config.guess config.sub configure configure.in \
	install-sh mkinstalldirs
DIST_SUBDIRS = doc include man src

DISTFILES = $(DIST_COMMON) $(DIST_SUBDIRS)

dist:
	-mkdir $(DISTNAME)
	(cd $(srcdir) ; gnutar cf - --exclude=CVS --exclude=.#* \
		$(DISTFILES)) | \
	( cd $(DISTNAME) ; tar xpf - )
	tar cf - $(DISTNAME) | gzip -c -9 > $(DISTNAME).tar.gz

sign:
	gpg -a --detach-sign $(DISTNAME).tar.gz
