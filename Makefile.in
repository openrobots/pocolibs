top_srcdir=	@top_srcdir@

include Init.make

INSTALL=	@INSTALL@

DISTNAME= @PACKAGE@-@VERSION@

SUBDIRS=\
	include				\
	src/portLib			\
	src/errorLib			\
	src/comLib			\
	src/posterLib			\
	src/posterLib/posterServ	\
	src/h2				\
	src/shell			\
	src/xes

TEST_SUBDIRS = \
	src/regress \
	src/posterLib/test/basic \
	src/posterLib/test/endian

all:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d all || exit 2; \
	done

depend:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d depend ; \
	done

regress:
	$(MAKE) -C src/regress regress

install:
	$(MKINSTALLDIRS) $(LIBDIR)/pkgconfig
	$(INSTALL) pocolibs.pc $(LIBDIR)/pkgconfig
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d install ;\
	done

clean:
	rm -rf $(DISTNAME) $(DISTNAME).tar.gz
	@for d in $(SUBDIRS) $(TEST_SUBDIRS); do \
		$(MAKE) -C $$d clean ; \
	done

distclean: clean
	@for d in $(SUBDIRS) $(TEST_SUBDIRS); do \
		$(MAKE) -C $$d distclean ; \
	done
	rm -f Makefile libtool config.log config.status src/pocolibs-config.h Init.make \
		pocolibs.pc

DIST_COMMON = BUGS CHANGELOG Init.make.in Init.make.posix Init.make.rtai \
	Makefile.in pocolib.pc.in README libtool.m4 pocolibs.m4 config.guess \
	config.sub configure configure.in ltmain.sh install-sh mkinstalldirs
DIST_SUBDIRS = doc include man src compat

DISTFILES = $(DIST_COMMON) $(DIST_SUBDIRS)

dist:
	-mkdir $(DISTNAME)
	(cd @srcdir@ ; gnutar cf - --exclude=CVS --exclude=.#* \
		--exclude=*~ $(DISTFILES)) | \
	( cd $(DISTNAME) ; tar xpf - )
	tar cf - $(DISTNAME) | gzip -c -9 > $(DISTNAME).tar.gz

sign:
	gpg -a --detach-sign $(DISTNAME).tar.gz

.PHONY:
	all depend clean distclean install dist sign
