top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@

include $(top_builddir)/Init.make

vpath %.c	@srcdir@

CPPFLAGS+=	$(MOD_CPPFLAGS)

DIRS=		portLib comLib posterLib

SRCS=\
	portLib/semaphore.c	\
	portLib/wd.c		\
	portLib/wd2.c		\
	portLib/taskDelete.c	\
	portLib/taskDeleteHook.c \
	portLib/taskDelay.c	\
	portLib/taskSuspend.c	\
	portLib/tick.c		\
				\
	comLib/commonStruct.c	\
	comLib/h2dev.c		\
	comLib/h2sem.c		\
	comLib/mbox.c		\
	comLib/h2timer.c	\
	comLib/h2timersem.c	\
	comLib/h2timefromtv.c	\
				\
	posterLib/poster.c

all: regress

# os specific rules (must include here for BINEXT in the rules below)
include $(top_srcdir)/Init.make.$(OSAPI)

BINS=$(SRCS:%.c=%$(BINEXT))
OBJS=$(SRCS:%.c=%-obj.lo)

osregress=$(OSAPI)-obj.lo

regress: dirs $(BINS)

dirs:
	mkdir -p $(DIRS)

%-obj.lo: %.c
	$(LTCC) -c $(CFLAGS) $(CPPFLAGS) $< -o $@ -prefer-non-pic

$(BINS): %$(BINEXT): %-obj.lo $(osregress)
	$(LTLD) $(CFLAGS) $^ -o $@ $(LDFLAGS) $(LIBTOOL_LINKPOCOLIBS)

clean:
	$(LIBTOOL) --mode=clean rm -f $(BINS) $(OBJS) $(osregress)

distclean: clean
	rm -f Makefile

.PHONY: all clean distclean
