top_builddir=	@top_builddir@
INSTALL=	@INSTALL@
srcdir=		@srcdir@

include ../../../Init.make

CPPFLAGS += -I. -I../..

VPATH= $(srcdir)

SRCS = \
	posterServ.c

SRCS_RPC = \
	posters_svc.c

OBJS = $(SRCS:%.c=%.o) $(SRCS_RPC:%.c=%.o)

SERV = posterServ

all: $(SERV)

$(SERV): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $(SERV) $(LDFLAGS) $(OBJS) \
	-L../../portLib -L../../errorLib -L../../comLib -L..  $(LIBS)

posters.x: $(srcdir)/../os/$(OSAPI)/posters.x
	rm -f posters.x
	$(LN) $< $@

install:
	$(MKINSTALLDIRS) $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(SERV) $(BINDIR)

posters_svc.c: posters.x
	rm -f $@
	$(RPCGEN) -m -o $@ $<

posters.h: posters.x
	rm -f $@
	$(RPCGEN) -h -o $@ $<


%.o : %.c
	$(CC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $<

clean:
	rm -f $(OBJS)  $(SERV) $(SRCS_RPC) posters.h posters.x

distclean: clean
	rm -r Makefile DEPENDANCES

depend DEPENDANCES::  posters.h $(SRCS) $(SRCS_RPC) 
	$(MKDEP) -c$(CC) -oDEPENDANCES $(CPPFLAGS)  $?

include DEPENDANCES

SUFFIXES = .x 


