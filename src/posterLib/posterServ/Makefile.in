top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@

include $(top_builddir)/Init.make
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS+=	-I. -I${top_srcdir}/src/posterLib

vpath %.c @srcdir@

SRCS = \
	posterServ.c \
	remPosterId.c

SRCS_RPC = \
	posters_svc.c

OBJS = $(SRCS:%.c=%.lo) $(SRCS_RPC:%.c=%.lo)

SERV = posterServ

all: $(SERV)

$(SERV): $(OBJS)
	$(LTLD) -o $(SERV) $(LDFLAGS) $(OBJS) $(LIBS)

posters.x: $(srcdir)/../os/posix/posters.x
	rm -f posters.x
	$(LN) $< $@

install:
	$(MKINSTALLDIRS) ${DESTDIR}$(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(SERV) ${DESTDIR}$(BINDIR)

posters_svc.c: posters.x
	rm -f $@
	$(RPCGEN) -m -o $@ $<

posters.h: posters.x
	rm -f $@
	$(RPCGEN) -h -o $@ $<


%.lo : %.c
	$(LTCC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $< -prefer-non-pic

clean:
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(SERV) $(SRCS_RPC) posters.h posters.x

distclean: clean
	rm -f Makefile DEPENDANCES

ifeq ($(findstring clean, $(MAKECMDGOALS)),)
depend DEPENDANCES:: posters.h $(SRCS) $(SRCS_RPC) 
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS)  $?

include DEPENDANCES
endif

SUFFIXES = .x 

.PHONY: all clean distclean install depend
