top_builddir=	@top_builddir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include ../../Init.make

VPATH= @top_srcdir@/src/posterLib

CPPFLAGS += -I. -I..

SRCS = \
	posterLib.c \
	localPosterLib.c \
	remotePosterLib.c

SRCS_RPC = \
	posters_clnt.c \
	posters_xdr.c

OBJS = $(SRCS:%.c=%.o) $(SRCS_RPC:%.c=%.o)

SHLIB_MAJOR = 2
SHLIB_MINOR = 1

BASENAME = libposterLib

LIB = $(BASENAME).la

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo) \
	-version-info $(SHLIB_MAJOR):$(SHLIB_MINOR) -rpath $(LIBDIR) \
	-L../portLib -L../errorLib -L../comLib \
	$(PORTLIB) $(ERRORLIB) $(COMLIB) 

#----------------------------------------------------------------------
# RPC specific rules
# 
# The whacky way to call rpcgen is needed to work around a bug in 
# Solaris' rpcgen that generate a bogus include line for posters.h
# if a path is prepended to posters.x in the argument line
#
posters_clnt.c: $(srcdir)/posters.x
	rm -f $@
	(cd $(srcdir) ; $(RPCGEN) -l posters.x) > $@

posters_xdr.c: $(srcdir)/posters.x
	rm -f $@
	(cd $(srcdir) ; $(RPCGEN) -c posters.x) > $@

posters.h: $(srcdir)/posters.x
	rm -f $@
	(cd $(srcdir) ; $(RPCGEN) -h posters.x) > $@

#----------------------------------------------------------------------
# Regles generiques

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) $<

depend DEPENDANCES:: posters.h $(SRCS)  $(LIB_SRCS_RPC)
	$(MKDEP) -c$(CC) -oDEPENDANCES $(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB) $(SRCS_RPC) posters.h posters.x
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile

install:
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

include DEPENDANCES

.SUFFIXES = .x 
