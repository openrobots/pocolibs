top_builddir=	@top_builddir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include ../../Init.make
include @top_srcdir@/Init.make.$(OSAPI)
-include @srcdir@/os/$(OSAPI)/Makefile.inc

VPATH= @srcdir@/os/$(OSAPI):@srcdir@

CPPFLAGS += -I. -I.. -I@srcdir@

SRCS += \
	posterLib.c \
	localPosterLib.c

OBJS = $(SRCS:%.c=%.o) $(SRCS_RPC:%.c=%.o)

SHLIB_MAJOR = 2
SHLIB_MINOR = 1

BASENAME = libposterLib

LIB = $(BASENAME)$(LIBEXT)

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo)	\
		$(LIBTOOL_LINKOPT) $(LIBTOOL_LINKPORTLIB)	\
		$(LIBTOOL_LINKERRORLIB) $(LIBTOOL_LINKCOMLIB)

#----------------------------------------------------------------------
# RPC specific rules
# 
# The whacky way to call rpcgen is needed to work around a bug in 
# Solaris' rpcgen that generate a bogus include line for posters.h
# if a path is prepended to posters.x in the argument line
#
posters_clnt.c: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -l posters.x) > $@

posters_xdr.c: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -c posters.x) > $@

posters.h: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -h posters.x) > $@

#----------------------------------------------------------------------
# Regles generiques

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) $< \
		$(LIBTOOL_COPT)

depend DEPENDANCES:: $(SRCS)  $(LIB_SRCS_RPC) $(HDR_RPC)
	$(MKDEP) -c$(CC) -oDEPENDANCES $(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB) $(SRCS_RPC) posters.h posters.x
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile

install:
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

include DEPENDANCES

.SUFFIXES = .x 
