top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir= @builddir@
abs_builddir= @abs_builddir@

include $(top_builddir)/Init.make
ifeq (art,$(OSAPI))
  -include $(srcdir)/os/posix/Makefile.inc
endif
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS+=	-I$(srcdir) -I$(abs_builddir)

OBJS=		$(SRCS:%.c=%.lo) $(SRCS_RPC:%.c=%.lo)

SHLIB_CURRENT=	6
SHLIB_REVISION=	0
SHLIB_AGE=	0

BASENAME= 	posterLib
LIB=		lib$(BASENAME).la

all: all-os $(LIB)

$(LIB): $(OBJS)
	$(LTLD) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR)	\
	$(COMLIB) $(ERRORLIB) $(PORTLIB)			\
	-version-info $(SHLIB_CURRENT):$(SHLIB_REVISION):$(SHLIB_AGE)

#----------------------------------------------------------------------
# RPC specific rules
# 
# The whacky way to call rpcgen is needed to work around a bug in 
# Solaris' rpcgen that generate a bogus include line for posters.h
# if a path is prepended to posters.x in the argument line
#
RPC_OUTPUT=posters_clnt.c posters_xdr.c posters.h
posters_clnt.c: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -l posters.x) > $@

posters_xdr.c: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -c posters.x) > $@

posters.h: posters.x
	rm -f $@
	(cd $(dir $<) ; $(RPCGEN) -h posters.x) > $@

#----------------------------------------------------------------------
# Regles generiques

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

clean:: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB) $(RPC_OUTPUT)

distclean:: clean
	rm -f DEPENDANCES Makefile

install::
	$(MKINSTALLDIRS) ${DESTDIR}$(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) ${DESTDIR}$(LIBDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS) posters.h
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

# os specific rules
include $(top_srcdir)/Init.make.$(OSAPI)
