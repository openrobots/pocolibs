top_builddir=	@top_builddir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include ../../../../Init.make
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

VPATH=		@srcdir@

CPPFLAGS += -I../../..
#----------------------------------------------------------------------
# Test programs
TESTR = testRead
TESTW = testWrite

all: $(TESTR) $(TESTW)

$(TESTR): testRead.lo
	$(LTLD) -o $(TESTR) $(CFLAGS) $(LDFLAGS) testRead.lo \
	-L../../../portLib -L../../../errorLib -L../../../comLib \
	-L../.. $(LIBS)

$(TESTW): testWrite.lo
	$(LTLD) -o $(TESTW) $(CFLAGS) $(LDFLAGS) testWrite.lo \
	-L../../../portLib -L../../../errorLib -L../../../comLib \
	-L../.. $(LIBS)

%.lo : %.c
	$(LTCC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $<


clean:
	$(LIBTOOL) --mode=clean rm -f $(TESTW) $(TESTR) $(TESTW).lo $(TESTR).lo

distclean:
	rm -f DEPENDANCES Makefile

install:
	@echo "Nothing to do"

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: testRead.c testWrite.c
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

