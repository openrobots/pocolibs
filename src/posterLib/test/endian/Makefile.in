top_builddir=	@top_builddir@
srcdir=		@srcdir@
top_srcdir=	@top_srcdir@
INSTALL=	@INSTALL@

include $(top_builddir)/Init.make

vpath %.c @srcdir@

#----------------------------------------------------------------------
# Test programs

TEST_W = testPosterWrite
TEST_R = testPosterRead
TEST_LIB = testPosterLib.lo

GENOM_LIBS = ${shell pkg-config --libs genom}
CFLAGS = ${shell pkg-config --cflags genom}

all: $(TEST_W) $(TEST_R)

$(TEST_W): testPosterWrite.lo $(TEST_LIB)
	$(LTLD) -o $@ $(LDFLAGS) $(CFLAGS) $(CPPFLAGS) \
	testPosterWrite.lo $(TEST_LIB) $(GENOM_LIBS)

$(TEST_R): testPosterRead.lo $(TEST_LIB)
	$(LTLD) -o $@ $(LDFLAGS) $(CFLAGS) $(CPPFLAGS) \
	testPosterRead.lo $(TEST_LIB) $(GENOM_LIBS)

# Regles standard 
%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) $<

# Nettoyage
clean:
	$(LIBTOOL) --mode=clean rm -f testPosterWrite.lo testPosterRead.lo \
	$(TEST_LIB) $(TEST_W) $(TEST_R)

distclean: clean
	rm -f DEPENDANCES Makefile

# Dependances 
MKDEPFLAGS = -k

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: testPosterLib.c testPosterWrite.c testPosterRead.c
	$(MKDEP) -c$(CC) $(MKDEPBLAGS) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

