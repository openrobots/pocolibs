top_builddir=	@top_builddir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include ../../Init.make
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

VPATH=		@srcdir@

CPPFLAGS+=	-I..

# CPPFLAGS += -DRSHD_DEBUG

PROG = shell
SRCS = \
	config.c	\
	main.c

OBJS = $(SRCS:%.c=%.lo)

all: $(PROG)
pure: $(PROG).pure

$(PROG): $(OBJS) $(LIBH2) $(LIBOS)
	$(LTLD) -o $(PROG) $(CFLAGS) $(LDFLAGS) \
	$(OBJS) -L../portLib -L../errorLib -L../comLib -L../posterLib $(LIBS) 

$(PROG).pure: $(OBJS) $(LIBH2) $(LIBOS)
	$(PURIFY) $(LTLD) -o $(PROG).pure $(CFLAGS) $(LDFLAGS) $(OBJS) $(LIBS)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) $< -prefer-non-pic

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

clean:
	rm -f $(OBJS) $(PROG)
	rm -rf .libs _libs

distclean: clean
	rm -f Makefile DEPENDANCES

install:
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) $(BINDIR)

include DEPENDANCES
