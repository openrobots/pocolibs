top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include $(top_builddir)/Init.make
include $(top_srcdir)/Init.make.$(OSAPI)
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

# CPPFLAGS += -DRSHD_DEBUG
vpath %.c $(srcdir)

PROG = shell
SRCS = \
	config.c	\
	main.c

OBJS = $(SRCS:%.c=%.lo)

all: $(PROG)
pure: $(PROG).pure

$(PROG): $(OBJS) $(LIBH2) $(LIBOS)
	$(LTLD) -o $(PROG) $(CFLAGS) $(LDFLAGS) \
			$(OBJS) $(LIBS) 

$(PROG).pure: $(OBJS) $(LIBH2) $(LIBOS)
	$(PURIFY) $(LTLD) -o $(PROG).pure $(CFLAGS) $(LDFLAGS) $(OBJS) $(LIBS)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) $< -prefer-non-pic

clean:
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(PROG)

distclean: clean
	rm -f Makefile DEPENDANCES

install:
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) $(BINDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

.PHONY: all pure clean distclean install depend
