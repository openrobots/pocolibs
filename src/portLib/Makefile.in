top_builddir=		@top_builddir@
include ../../Init.make

INSTALL=		@INSTALL@

CPPFLAGS += -I..

VPATH=  @top_srcdir@/src/portLib

SRCS = \
	errnoLib.c 		\
	osInit.c		\
	semLib.c		\
	shellLib.c		\
	snprintf.c		\
	symLib.c		\
	sysLib.c		\
	taskLib.c		\
	tickLib.c		\
	wdLib.c

OBJS = $(SRCS:%.c=%.o)

SHLIB_MAJOR=2
SHLIB_MINOR=0

BASENAME = libportLib

LIB = $(BASENAME).la

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo) \
	-rpath $(prefix)/lib -version-info $(SHLIB_MAJOR):$(SHLIB_MINOR)

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CFLAGS) $(CPPFLAGS) $<

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES $(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB)
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile

install: $(LIB)
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)
	$(LIBTOOL) --mode=finish $(LIBDIR)

include DEPENDANCES
