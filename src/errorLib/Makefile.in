top_builddir=	@top_builddir@
include ../../Init.make
include @top_srcdir@/Init.make.$(OSAPI)
-include @srcdir@/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS += -I..

VPATH=	@srcdir@/os/$(OSAPI):@srcdir@

SRCS += h2errorLib.c
OBJS = $(SRCS:%.c=%.o)

SHLIB_MAJOR = 2
SHLIB_MINOR = 0

BASENAME = liberrorLib

LIB = $(BASENAME)$(LIBEXT)

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo)  \
		$(LIBTOOL_LINKOPT) $(LIBTOOL_LINKPORTLIB)

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) $< \
		$(LIBTOOL_COPT)

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -o DEPENDANCES $(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB)
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile h2addErrno


install: $(LIB)
	$(MKINSTALLDIRS) $(BINDIR) $(LIBDIR)
	$(INSTALL) h2addErrno $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

include DEPENDANCES
