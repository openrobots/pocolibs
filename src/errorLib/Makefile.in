top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir=	@builddir@

INSTALL=	@INSTALL@

include $(top_builddir)/Init.make
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

SRCS+=		h2errorLib.c
OBJS=		$(SRCS:%.c=%.lo)

SHLIB_CURRENT=	3
SHLIB_REVISION=	0
SHLIB_AGE=	0

LIB=		liberrorLib.la

all: all-os $(LIB)

$(LIB): $(OBJS)
	$(LTLD) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR) $(PORTLIB) \
		-version-info $(SHLIB_CURRENT):$(SHLIB_REVISION):$(SHLIB_AGE)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

clean:: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB)

distclean:: clean
	rm -f DEPENDANCES Makefile
	rm -f h2addErrno

install:: $(LIB)
	$(MKINSTALLDIRS) ${DESTDIR}$(BINDIR) ${DESTDIR}$(LIBDIR)
	$(INSTALL) h2addErrno ${DESTDIR}$(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) ${DESTDIR}$(LIBDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -o DEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

# os specific rules
include $(top_srcdir)/Init.make.$(OSAPI)
