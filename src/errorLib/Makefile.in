top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@

include ../../Init.make
-include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS+=	-I..

SRCS+=		h2errorLib.c
OBJS=		$(SRCS:%.c=%.lo)

SHLIB_CURRENT=	3
SHLIB_REVISION=	0
SHLIB_AGE=	0

BASENAME = errorLib
LIB = lib$(BASENAME).la

all: all-os $(LIB)

$(LIB): $(OBJS)
	$(LTLD) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR)	\
	-L../portLib $(PORTLIB)					\
	-version-info $(SHLIB_CURRENT):$(SHLIB_REVISION):$(SHLIB_AGE)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -o DEPENDANCES -t.lo $(CPPFLAGS) $?

clean:: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB)

distclean:: clean
	rm -f DEPENDANCES Makefile

install:: $(LIB)
	$(MKINSTALLDIRS) $(BINDIR) $(LIBDIR)
	$(INSTALL) h2addErrno $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

ifneq (distclean,$(MAKECMDGOALS))
include DEPENDANCES
endif

# os specific rules
include $(top_srcdir)/Init.make.$(OSAPI)
