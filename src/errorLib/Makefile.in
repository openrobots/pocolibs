top_builddir=	@top_builddir@
include ../../Init.make

INSTALL=	@INSTALL@

CPPFLAGS += -I..

VPATH=	@top_srcdir@/src/errorLib

SRCS = h2errorLib.c
OBJS = $(SRCS:%.c=%.o)

SHLIB_MAJOR = 2
SHLIB_MINOR = 0

BASENAME = liberrorLib

LIB = $(BASENAME).la

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo)  \
	-rpath $(prefix)/lib -version-info $(SHLIB_MAJOR):$(SHLIB_MINOR) \
	-L../portLib -R$(LIBDIR) $(PORTLIB)

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) $<

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -o DEPENDANCES $(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB)
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile


install: $(LIB)
	$(MKINSTALLDIRS) $(ROOTROBOTS)/bin $(LIBDIR)
	$(INSTALL) h2addErrno $(ROOTROBOTS)/bin
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)
	$(LIBTOOL) --mode=finish $(LIBDIR)

include DEPENDANCES
