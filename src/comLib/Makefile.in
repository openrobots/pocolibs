top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@

include ../../Init.make

INSTALL=	@INSTALL@

CPPFLAGS +=	-I..
CPPFLAGS +=	-DPOSTER_SERV_PATH=\"$(BINDIR)/posterServ\"

VPATH=		$(srcdir)

SRCS += \
	commonStructLib.c	\
	csLib.c			\
	gcomLib.c		\
	h2devLib.c		\
	h2devOsLib.c		\
	h2endianness.c		\
	h2evnLib.c		\
	h2initGlob.c		\
	h2mathLib.c		\
	h2rngLib.c		\
	h2semLib.c		\
	h2timeLib.c		\
	h2timerLib.c		\
	h2timerTest.c           \
	mboxLib.c		\
	mboxEssay.c             \
	smMemLib.c		\
	smMemOsLib.c		\
	smObjLib.c		\
	vfscanf.c               \
	xesClient.c             \
	xesStdio.c

OBJS = $(SRCS:%.c=%.lo)

SHLIB_MAJOR = 2
SHLIB_MINOR = 2

BASENAME= 	comLib
LIB=		lib$(BASENAME).la

all: all-os $(LIB)

$(LIB): $(OBJS)
	$(LTLD) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR)		  \
		-L../errorLib $(ERRORLIB) -L../portLib $(PORTLIB) $(LIBM) \
		-version-info $(SHLIB_MAJOR):$(SHLIB_MINOR)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(CFLAGS) $<

depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES 	$(CPPFLAGS) $?

clean: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB)

distclean: clean
	rm -f DEPENDANCES Makefile

install: $(LIB)
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

ifneq (distclean,$(MAKECMDGOALS))
include DEPENDANCES
endif

# os specific rules
-include $(srcdir)/os/$(OSAPI)/Makefile.inc
include $(top_srcdir)/Init.make.$(OSAPI)
