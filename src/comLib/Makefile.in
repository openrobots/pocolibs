top_builddir=	@top_builddir@
include ../../Init.make
include @top_srcdir@/Init.make.$(OSAPI)
-include @srcdir@/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS += -I.. -DPOSTER_SERV_PATH=\"@bindir@/posterServ\"

VPATH= 	@srcdir@/os/$(OSAPI):@srcdir@

SRCS = \
	commonStructLib.c	\
	csLib.c			\
	gcomLib.c		\
	h2devLib.c		\
	h2devOsLib.c		\
	h2evnLib.c		\
	h2initGlob.c		\
	h2mathLib.c		\
	h2rngLib.c		\
	h2semLib.c		\
	h2timeLib.c		\
	h2timerLib.c		\
	h2timerTest.c		\
	mboxEssay.c		\
	mboxLib.c		\
	smMemLib.c		\
	smMemOsLib.c		\
	smObjLib.c		\
	vfscanf.c		\
	xesClient.c		\
	xesStdio.c		\
	h2endianness.c

OBJS = $(SRCS:%.c=%.o)

SHLIB_MAJOR = 2
SHLIB_MINOR = 1

BASENAME = libcomLib

LIB = $(BASENAME)$(LIBEXT)

all: $(LIB)

$(LIB): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $@ $(OBJS:%.o=%.lo) 	\
		$(LIBTOOL_LINKOPT) $(LIBTOOL_LINKPORTLIB)	\
		$(LIBTOOL_LINKERRORLIB)

%.o: %.c
	$(LIBTOOL) --mode=compile $(CC) -c $(CPPFLAGS) $(CFLAGS) $< \
		$(LIBTOOL_COPT)

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES 	$(CPPFLAGS) $?

clean: 
	rm -f $(OBJS) $(LIB)
	rm -f $(OBJS:%.o=%.lo)
	rm -rf .libs _libs

distclean:
	rm -f DEPENDANCES Makefile

install: $(LIB)
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

include DEPENDANCES
