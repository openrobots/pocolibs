top_builddir=	@top_builddir@
include ../../Init.make

CPPFLAGS += -I..

VPATH=	@top_srcdir@/src/h2

SRC_PROG = h2.c
OBJ_PROG = $(SRC_PROG:%.c=%.o)
PROG = h2

all: $(PROG)

$(PROG): $(OBJ_PROG) $(LIBH2) $(LIBOS)
	$(LIBTOOL) --mode=link $(CC) -o $(PROG) $(CFLAGS) $(LDFLAGS) \
	$(OBJ_PROG) \
	-L../portLib -L../errorLib -L../comLib -L../posterLib $(LIBS)

%.o: %.c
	$(CC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $<

depend DEPENDANCES:: $(SRC_PROG)
	$(MKDEP) -c$(CC) -oDEPENDANCES 	$(CPPFLAGS) $?

clean: 
	rm -f $(OBJ_PROG) $(PROG)

install:
	$(MKINSTALLDIRS) $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) $(BINDIR)

include DEPENDANCES
