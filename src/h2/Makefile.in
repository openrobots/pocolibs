top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@

include ${top_builddir}/Init.make
include ${top_srcdir}/Init.make.${OSAPI}
-include ${srcdir}/os/${OSAPI}/Makefile.inc

INSTALL=	@INSTALL@

vpath %.c @srcdir@

SRCS=		h2.c
OBJS=		$(SRCS:%.c=%.lo)

PROG=		h2

all: $(PROG)

$(PROG): $(OBJS)
	$(LTLD) -o $(PROG) $(CFLAGS) $(LDFLAGS) $(OBJS) \
	  $(LIBS)

%.lo: %.c
	$(LTCC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $< -prefer-non-pic

clean:: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(PROG)

distclean:: clean
	rm -f DEPENDANCES Makefile

install::
	$(MKINSTALLDIRS) ${DESTDIR}$(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) ${DESTDIR}$(BINDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

.PHONY: all clean distclean install depend

