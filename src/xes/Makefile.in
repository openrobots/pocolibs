top_builddir=	@top_builddir@
INSTALL=	@INSTALL@

include ../../Init.make

ifeq (yes,$(HAS_X))
CPPFLAGS += -DUSE_X
XLIB = -lX11
endif

VPATH=	@top_srcdir@/src/xes

SRCS = \
	rngLib.c \
	serv.c \
	socket_lib.c \
	version.c

OBJS = $(SRCS:%.c=%.o)
PROG = xes_server

all: $(PROG)

$(PROG): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $(PROG) $(CFLAGS) $(XLDFLAGS) \
	$(LDFLAGS) $(OBJS)  $(XLIB) $(OS_LIBS)

%.o: %.c
	$(CC) -c $(CPPFLAGS) $(XCPPFLAGS) $(CFLAGS) $<

depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -oDEPENDANCES $(CPPFLAGS) $(XCPPFLAGS) $?

clean:
	rm -f $(OBJS) $(SERVER)

distclean: clean
	rm -f Makefile DEPENDANCES

install:
	$(MKINSTALLDIRS) $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) $(BINDIR)

include DEPENDANCES
