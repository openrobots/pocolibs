top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
INSTALL=	@INSTALL@

include $(top_builddir)/Init.make

ifeq (yes,$(HAS_X))
CPPFLAGS += -DUSE_X
XLIB = -lX11
endif

vpath %.c ${srcdir}

SRCS = \
	rngLib.c \
	serv.c \
	socket_lib.c \
	version.c

OBJS = $(SRCS:%.c=%.lo)
PROG = xes_server

all: $(PROG)

$(PROG): $(OBJS)
	$(LIBTOOL) --mode=link $(CC) -o $(PROG) $(CFLAGS) $(XLDFLAGS) \
	$(LDFLAGS) $(OBJS)  $(XLIB) $(OS_LIBS)

%.lo: %.c
	$(LTCC) -c $(CPPFLAGS) $(XCPPFLAGS) $(CFLAGS) $<

clean:
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(PROG)

distclean: clean
	rm -f Makefile DEPENDANCES

install:
	$(MKINSTALLDIRS) ${DESTDIR}$(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) ${DESTDIR}$(BINDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CC) -t.lo -oDEPENDANCES $(CPPFLAGS) $(XCPPFLAGS) $?

include DEPENDANCES
endif

.PHONY: all clean distclean install depend
